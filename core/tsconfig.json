{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    // "declaration": true, 开启此选项会有 Props 类型错误
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
    ],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
